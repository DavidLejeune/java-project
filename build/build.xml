<?xml version="1.0"?>
<project name="my-maven-project" default="zip" basedir=".">


	<target name="delete">
		<delete dir="bin"/>
		<delete dir="lib"/>
		<delete dir="src"/>
		<delete dir="test-output"/>
	</target>

	<target name="create" depends="delete">
		<mkdir dir="bin"/>
		<mkdir dir="lib"/>
		<mkdir dir="src"/>
		<mkdir dir="test-output"/>
	</target>
	
	<target name="copy" depends="create">
		<copydir dest="/home/qbmtadmin/test/maven-test/my-maven-project/build/src" src="/home/qbmtadmin/test/maven-test/my-maven-project/src" excludes="**/lib/**" />
		<copy todir="/home/qbmtadmin/test/maven-test/my-maven-project/build/lib" overwrite="true">
			<fileset dir="/home/qbmtadmin/test/maven-test/my-maven-project/src/main/java/be/qbmt/demo" includes="**/*.jar"></fileset>
		</copy>
	</target>


	<path id="classpath">
		<pathelement location="bin" />
	</path>

	<target name="compile" depends="copy">
		<javac classpathref="classpath" includeantruntime="true" srcdir="/home/qbmtadmin/test/maven-test/my-maven-project/build/src" destdir="/home/qbmtadmin/test/maven-test/my-maven-project/build/bin" includes="**/*.java" />
	</target>

	<target name="zip" depends="compile">
		<zip destfile="test-output/manual.zip" basedir="/home/qbmtadmin/test/maven-test/my-maven-project/build/bin" update="true" />
	</target>
	

</project>
